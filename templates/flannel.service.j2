[Unit]
Description=flannel
Documentation=https://coreos.com/flannel
Before=docker.service

[Service]
ExecStart=/usr/bin/flanneld -etcd-endpoints=http://10.240.0.10:2379,http://10.240.0.11:2379,http://10.240.0.12:2379 -etcd-prefix=/nais/network

Restart=always
StartLimitInterval=0
RestartSec=10

[Install]
WantedBy=multi-user.target
